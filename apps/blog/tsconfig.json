{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"target": "es6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"noUncheckedIndexedAccess": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@jeehoon/hooks": ["../../packages/hooks/src/index.ts"],
			"@jeehoon/theme": ["../../packages/theme/index.ts"],
      "@jeehoon/ui": ["../../packages/ui/src/index.ts"],
      "@jeehoon/utils": ["../../packages/utils/src/index.ts"],
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
